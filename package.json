{
  "name": "chat-analytics",
  "version": "0.0.1",
  "author": "Martin Emiliano Lombardo <to@mlomb.me>",
  "license": "MIT",
  "scripts": {
    "build:node": "tsc -p tsconfig.node.json && tsc-alias -p tsconfig.node.json",
    "build:web": "webpack build --env production --progress",
    "stats": "webpack build --env production --profile --json > stats.json",
    "dev": "webpack serve --progress",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watchAll",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "main": "./dist/lib/index.js",
  "bin": "./dist/lib/CLI.js",
  "files": [
    "LICENSE",
    "README.md",
    "assets/data/emojis/emoji-data.json",
    "assets/data/models",
    "assets/data/text",
    "assets/fasttext/fasttext_wasm.js",
    "assets/fasttext/fasttext_wasm.wasm",
    "dist",
    "dist_web/report.html"
  ],
  "devDependencies": {
    "@amcharts/amcharts5": "^5.2.48",
    "@tippyjs/react": "^4.2.6",
    "@types/glob": "^8.0.0",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-window": "^1.8.5",
    "@types/webpack-env": "^1.18.0",
    "autoprefixer": "^10.4.13",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "cssnano": "^5.1.14",
    "emoji-regex": "^10.2.1",
    "fflate": "^0.7.4",
    "glob": "^8.1.0",
    "html-inline-css-webpack-plugin": "^1.11.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.3",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "~2.7.2",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.3",
    "pretty-bytes": "<6.0.0",
    "react": "^18.2.0",
    "react-countup": "^6.4.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.4.1",
    "react-window": "^1.8.8",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.2",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "whatsapp-chat-parser": "^3.2.2",
    "yargs": "^17.6.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)$": "<rootDir>/lib/$1",
      "^@app/(.*)$": "<rootDir>/app/$1",
      "^@assets/(.*)$": "<rootDir>/assets/$1",
      "^@pipeline/(.*)$": "<rootDir>/pipeline/$1",
      "^@report/(.*)$": "<rootDir>/report/$1"
    },
    "transform": {
      "^.+\\.[tj]s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.node.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!pretty-bytes)"
    ]
  }
}
