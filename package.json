{
  "name": "chats-analyzer",
  "version": "0.1.0",
  "scripts": {
    "build": "webpack build --env production --progress",
    "size": "webpack build --env production --profile --json > stats.json",
    "dev": "webpack serve --progress",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watchAll",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "author": "Martin Emiliano Lombardo <to@mlomb.me>",
  "license": "MIT",
  "devDependencies": {
    "@amcharts/amcharts5": "^5.0.18",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-window": "^1.8.5",
    "@types/webpack-env": "^1.16.3",
    "autoprefixer": "^10.4.0",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "cssnano": "^5.0.14",
    "fflate": "^0.7.2",
    "file-loader": "^6.2.0",
    "html-inline-css-webpack-plugin": "^1.11.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.5",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "pretty-bytes": "^5.6.0",
    "react": "^17.0.2",
    "react-countup": "^6.1.0",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.33.1",
    "react-window": "^1.8.6",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1",
    "whatsapp-chat-parser": "^3.2.1",
    "worker-loader": "^3.0.8"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/app/$1",
      "^@assets/(.*)$": "<rootDir>/assets/$1",
      "^@pipeline/(.*)$": "<rootDir>/pipeline/$1",
      "^@report/(.*)$": "<rootDir>/report/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
